{
  "compilerOptions": {
    "lib": ["esnext"],
    "strict": true,
    "jsx": "react",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noErrorTruncation": true,
    "target": "ES6",
    "composite": true,
    "declarationMap": true
  }
}
